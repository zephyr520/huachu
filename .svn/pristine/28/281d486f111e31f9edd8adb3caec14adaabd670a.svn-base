package com.huachu.common.util;

import java.util.Date;
import java.util.Random;
import java.util.UUID;

/**
 * @author Administrator
 * @DATE 2018/9/5
 */
public class UUIDUtil {

    public static String genBatchNo(Integer userId) {
        return randomBatchNo(userId, 6, 6);
    }

    /**
     * 批次号生成规则，年月日+用户ID+随机数
     * @param userId 用户ID
     * @param min 随机数最小位数
     * @param max 随机数最大位数
     * @return
     */
    public static String randomBatchNo(Integer userId, int min,int max) {
        String YYYYMMDD = DateUtils.YYYYMMDD.get().format(new Date());
        Random random = new Random();
        int s = random.nextInt(max)%(max-min+1) + min;
        StringBuffer buffer =new StringBuffer();
        for(int i=0;i<s;i++)
        {
            Integer val = (int)(Math.random()*9+1);
            buffer.append(val.toString());
        }
        return YYYYMMDD + userId + buffer.toString();
    }

    /**
     * 客户编号生成规则：机器ID + 年月日 + UUID的hash值
     * machineId 最大支持1-9个集群机器部署
     * @param machineId
     * @return
     */
    public static String genUID(int machineId) {
        String YYYYMMDD = DateUtils.YYYYMMDD.get().format(new Date());
        int hashCodeV = UUID.randomUUID().toString().hashCode();
        if(hashCodeV < 0) {
            hashCodeV = -hashCodeV;
        }
        /**
         * %010d
         * 0 代表前面补充0
         * 10 代表长度为10不够补零
         * d 代表参数为正数型
         */
        return  machineId + YYYYMMDD + String.format("%010d", hashCodeV);
    }
}
